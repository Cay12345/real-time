<div class="container">
  <h3>List User</h3>
  <table class="table table-bordered mt-5">
    <thead>
      <tr>
        <th>Id</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.map do |user| %>
        <% next if current_user && user.id == current_user.id %>
        <tr>
          <td><%= user.id%></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td>
            <%= form_for @chat do |f| %>
              <%= f.hidden_field :receiver_id, value: user.id %>
              <%= f.submit "Message" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
